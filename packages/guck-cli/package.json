{
  "name": "@guckdev/cli",
  "version": "0.1.0",
  "description": "CLI for Guck telemetry capture and MCP",
  "repository": {
    "type": "git",
    "url": "https://github.com/tillkolter/guck-mcp"
  },
  "license": "MIT",
  "type": "module",
  "bin": {
    "guck": "dist/cli.js"
  },
  "files": [
    "dist",
    "scripts",
    "src",
    "tsconfig.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "node scripts/ensure-deps.mjs && tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "dev": "node --watch dist/cli.js",
    "prepare": "pnpm run build",
    "test": "pnpm run build"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@guckdev/sdk": "workspace:*",
    "@guckdev/core": "workspace:*",
    "@guckdev/mcp": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "25.2.2"
  }
}
