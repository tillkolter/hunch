{
  "name": "@guckdev/core",
  "version": "0.1.0",
  "description": "Core utilities and types for Guck telemetry",
  "repository": {
    "type": "git",
    "url": "https://github.com/tillkolter/guck-mcp"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "tsconfig.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json --watch",
    "prepare": "pnpm run build",
    "test": "pnpm run build && node --test test/*.test.js"
  },
  "engines": {
    "node": ">=18"
  },
  "optionalDependencies": {
    "@aws-sdk/client-cloudwatch-logs": "3.985.0",
    "@aws-sdk/credential-providers": "3.985.0",
    "@kubernetes/client-node": "1.4.0"
  },
  "devDependencies": {
    "@types/node": "25.2.2"
  }
}
