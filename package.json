{
  "name": "grpr-monorepo",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:py": "cd packages/grpr-py && uv run pytest",
    "spec:check": "node scripts/spec-coverage-check.mjs",
    "version:sync": "node scripts/sync-version.mjs",
    "version:check": "node scripts/version-check.mjs"
  },
  "pnpm": {
    "overrides": {
      "grpr": "workspace:*",
      "grpr-core": "workspace:*",
      "grpr-mcp": "workspace:*"
    }
  }
}
